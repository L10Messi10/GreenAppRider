<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenAppRider.Views.ItemsPage"
             Title="Confirmed orders"
             xmlns:local="clr-namespace:GreenAppRider.ViewModels"  
             xmlns:model="clr-namespace:GreenAppRider.Models"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:transformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             x:Name="BrowseItemsPage">
    <!--
      x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
      https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->
    <StackLayout>
        <RefreshView x:Name="RefreshView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
                     Refreshing="RefreshView_OnRefreshing" BackgroundColor="{StaticResource Primary}" RefreshColor="{StaticResource TextWhiteColor}">
            <CollectionView x:Name="OrdersList" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
                            SelectionMode="Single">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="1" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" HeightRequest="110">
                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                <StackLayout WidthRequest="70">
                                    <ff:CachedImage x:Name="cusimg" Source="{Binding propic}" Aspect="AspectFill"
                                                    LoadingPlaceholder="person.png" WidthRequest="70" HeightRequest="70"
                                                    DownsampleToViewSize="True"
                                                    ErrorPlaceholder="person.png" >
                                        <ff:CachedImage.Transformations>
                                            <transformations:CircleTransformation BorderHexColor="#009E49" BorderSize="10"/>
                                            <transformations:RoundedTransformation Radius="60"/>
                                        </ff:CachedImage.Transformations>
                                    </ff:CachedImage>
                                </StackLayout>
                                <StackLayout WidthRequest="180">
                                    <Label >
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding full_name}" FontSize="14"
                                                      TextColor="{StaticResource Primary}" FontAttributes="Bold" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label >
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding mobile_num}" FontSize="12"
                                                      TextColor="{StaticResource TextBlackColor}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label LineBreakMode="TailTruncation">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding del_address}" FontSize="12"
                                                      TextColor="{StaticResource TextBlackColor}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>
                                <StackLayout HorizontalOptions="EndAndExpand" >

                                    <StackLayout HorizontalOptions="EndAndExpand">
                                        <Label TextColor="{StaticResource PriceColor}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="₱ " FontSize="15" />
                                                    <Span Text="{Binding tot_payable}" FontSize="15"
                                                          FontAttributes="Bold" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label></StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </StackLayout>
    
</ContentPage>
